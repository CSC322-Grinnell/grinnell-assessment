<% provide(:title, "Departments") %>
<h1>Departments</h1>

<table>
  <thead>
    <tr>
      <th>Department</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.deptFullName %></td>
        <td><%= link_to 'Show', department %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
